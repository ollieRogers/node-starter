/**
 * Forms
 */
#contact-form
  max-width 700px
  margin 0 auto 
  padding 0 2em
  position relative
  top 0
  z-index 100
  box-sizing border-box
  h1
    margin-top 0.35em
.form  
  margin-top 1em
  input, textarea, label
    display block
  input, textarea
    border 1px solid lighten(brand-color-secondary, 70%)
    margin 0em 0 2em 0 
    box-shadow inset 0 2px 5px rgba(0, 0, 0, .1)
    transition box-shadow standard-transition-speed ease, border standard-transition-speed ease
    box-sizing border-box
    font-family label-font-family
    font-size 1em
    &:focus
      outline none
      border-color brand-color-primary
      box-shadow inset 0 0 0 rgba(0, 0, 0, 0)
  input
    height 40px
    text-indent 10px
    width 100%
    padding 0
  textarea 
    width 100%
    padding 10px
    margin 0em 0 1em 0
  label 
    text-transform capitalize
    margin 0 0 10px 0
    padding 0 
    display block 
    padding 0
    font-family label-font-family
    font-weight 500
    font-size 1em


placeholder()
  font-family label-font-family
  font-size 1em
  color lighten( body-font-color, 80%)


#contact-map
  width 100%
  height 400px


::-webkit-input-placeholder {
   placeholder()
}

:-moz-placeholder { 
   placeholder()  
}

::-moz-placeholder { 
   placeholder()  
}

:-ms-input-placeholder {  
   placeholder()  
}

@media (max-width: 500px)
  #contact-form
    padding 2em 0em
    top 0

  .contact-submit
    width 100%